.snippet
  %h1 Paste a new code snippet below:
  %form{ :action => '/', :method => 'POST' }
    %label{ :for => 'snippet_title' } Title:
    %input{ :type => 'text', :name => 'snippet_title' }
    %textarea{ :name => 'snippet_body', :id => 'snipped_body', :rows => 20 }
    %input{ :type => 'submit', :value => 'Save' }
